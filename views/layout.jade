!!! 5
html(ng-app='aux')
  head
    title aux
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-capable')
    base(href='/')
    link(rel='shortcut icon', href='/images/favicon.png')
    link(rel='stylesheet', href='/stylesheets/main.css')

  body(ng-controller='AppCtrl')
    #wrapper
      header
        a.back(ng-show='isSecondary', href='/') &lt;
        a.title.header(href='/', ng-show='!isSecondary') aux.meatspac.es
        ul.authenticate.title
          li(ng-if='isAuthenticated')
            a(href='javascript:;', ng-click='logout()') Logout
          li.add-parent(ng-if='isAuthenticated')
            a.add(href="javascript:(function(){window.open('#{ siteHost }/add?url='+encodeURIComponent(window.location.href),'aux bookmarklet','left=200,top=200,width=320,height=250,personalbar=0,toolbar=0,scrollbars=0,resizable=0')})()") +
            span.tip
              .first 1. Drag this + to your bookmarks
              .second 2. Visit Youtube or Vimeo and run the bookmarklet
              .first 3. On mobile? Copy and paste the following into a new bookmark
                textarea javascript:(function(){window.open('#{ siteHost }/add?url='+encodeURIComponent(window.location.href),'aux bookmarklet','left=200,top=200,width=320,height=250,personalbar=0,toolbar=0,scrollbars=0,resizable=0')})()
          li(ng-if='!isAuthenticated')
            a(href='javascript:;', ng-click='login()') Sign in
      block content
      #footer

    script(src='https://login.persona.org/include.js')
    script(src='/javascripts/vendor/jquery.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/vendor/angular.js')
    script(src='/javascripts/vendor/angular-route.js')
    script(src='/javascripts/vendor/angular-sanitize.js')
    script(src='/javascripts/app.js')
    script(src='/javascripts/factories.js')
    script(src='/javascripts/controllers.js')
